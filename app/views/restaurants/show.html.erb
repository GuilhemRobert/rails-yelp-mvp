<%  %>
<h2> <%= @restaurant.name %> </h2>
<p>A great <%= @restaurant.category %> restaurant </p>
<p>Address : <%= @restaurant.address %></p>
<%= link_to "Go back home", restaurants_path %>
<%= link_to "Create review",new_restaurant_review_path(@restaurant) %>

<h3>Reviews</h3>
<p>Average rate : <%= @average_rate %></p>
<ul>
  <% @restaurant.reviews.each do |review| %>
    <li><%= review.content %></li>
  <% end %>
</ul>
